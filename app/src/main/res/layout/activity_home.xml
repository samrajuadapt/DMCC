<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="homeViewModel"
            type="com.samboy.dmcc.home.viewmodel.HomeViewModel" />
        <variable
            name="countrySpinner"
            type="android.widget.ArrayAdapter" />
        <variable
            name="regionSpinner"
            type="android.widget.ArrayAdapter" />
        <variable
            name="stateSpinner"
            type="android.widget.ArrayAdapter" />
        <variable
            name="townSpinner"
            type="android.widget.ArrayAdapter" />
        <variable
            name="jobSpinner"
            type="android.widget.ArrayAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.ui.HomeActivity"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_main">
        <TextView
            android:text="@{homeViewModel.userName}"
            android:textSize="@dimen/_20ssp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/colorGrayVL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:popupBackground="@color/colorGrayL"
            android:background="@drawable/bg_spinner"
            android:layout_marginTop="@dimen/_10sdp"
            app:adapter="@{countrySpinner}"
            binding:selectedValue="@={homeViewModel.selectedCountry}"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:popupBackground="@color/colorGrayL"
            android:background="@drawable/bg_spinner"
            android:layout_marginTop="@dimen/_10sdp"
            app:adapter="@{regionSpinner}"
            binding:selectedValue="@={homeViewModel.selectedRegion}"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:popupBackground="@color/colorGrayL"
            android:background="@drawable/bg_spinner"
            android:layout_marginTop="@dimen/_10sdp"
            app:adapter="@{stateSpinner}"
            binding:selectedValue="@={homeViewModel.selectedState}"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:popupBackground="@color/colorGrayL"
            android:background="@drawable/bg_spinner"
            android:layout_marginTop="@dimen/_10sdp"
            app:adapter="@{townSpinner}"
            binding:selectedValue="@={homeViewModel.selectedTown}"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:popupBackground="@color/colorGrayL"
            android:background="@drawable/bg_spinner"
            android:layout_marginTop="@dimen/_10sdp"
            app:adapter="@{jobSpinner}"
            binding:selectedValue="@={homeViewModel.selectedJob}"/>
        <Button
            android:onClick="@{(view)->homeViewModel.onContinueClick(view)}"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_btn_login"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/_continue"
            android:textSize="@dimen/_12ssp"
            android:textAllCaps="false"
            android:textColor="@color/colorGrayVL"/>

    </LinearLayout>

</layout>
